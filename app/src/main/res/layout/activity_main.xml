<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#01579B"
    tools:context="com.example.siddhiparekh11.androiddatabase.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Product Database"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_stroke"
        android:padding="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAllCaps="false"
        android:text="Insert New Item"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_corners"

        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/insertbutton"
        android:onClick="onInsertPressed"

        />
    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Search Item"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_corners1"

        android:padding="10dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:id="@+id/searchbut"
        android:onClick="onSearchPressed"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Close App"
        android:padding="10dp"
        android:onClick="onFinish"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>

